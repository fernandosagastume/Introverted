<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sb_food"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RegistroGustosPt5"
    android:background="@drawable/lineargradient">

    <TextView
        android:id="@+id/txt_reg_pt5"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="180dp"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:text="¿Te gusta beber?"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/siguientept5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chela"
        app:layout_constraintVertical_bias="0.09" />

    <Button
        android:id="@+id/siguientept5"
        android:layout_width="175dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_rectangle"
        android:fontFamily="@font/rubik_medium"
        android:foregroundGravity="center"
        android:shadowColor="#FFFFFF"
        android:text="SIGUIENTE"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/chela"
        android:layout_width="202dp"
        android:layout_height="213dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:srcCompat="@drawable/ic_cerveza" />

    <RadioGroup
        android:id="@+id/bebedor"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@+id/siguientept5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chela"
        app:layout_constraintVertical_bias="0.792"
        >

        <RadioButton
            android:id="@+id/si_bebe"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_marginBottom="5dp"
            android:text="Sí"
            android:textColor="#B3FFFFFF"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            />
        <RadioButton
            android:id="@+id/no_bebe"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_marginBottom="5dp"
            android:text="No"
            android:textColor="#B3FFFFFF"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            />
        <RadioButton
            android:id="@+id/bebe_ocasional"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_marginBottom="5dp"
            android:text="Ocasionalmente"
            android:textColor="#B3FFFFFF"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            />
        <RadioButton
            android:id="@+id/bebe_social"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_marginBottom="5dp"
            android:text="Socialmente"
            android:textColor="#B3FFFFFF"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            />
        <RadioButton
            android:id="@+id/odia_beber"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_marginBottom="5dp"
            android:text="No, lo odio"
            android:textColor="#B3FFFFFF"
            android:fontFamily="@font/rubik_medium"
            android:textSize="18sp"
            />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>